{% extends "layout.twig" %}

{% block title %}Search Result{% endblock %}

{% block content %}
    {% include 'search.form.twig' %}
    <div class="results-count"><b>{{ total_result }}</b> results : let's follow :]</div>
    <div class="results-listing">
    {% for event in events %}
        <div class="results-listing-row">
            ({{ event.subject_category }}) <strong>{{ event.name|convert_encoding('UTF-8', 'ISO-8859-1') }}</strong> - <a href="{{ url('calendar', {id: event.subject_id}) }}">{{ event.subject_name }}</a>{% include 'follow.button.twig' with {id: event.subject_id} %}
            <p>
                {{ event.description }} <br />
                <small>
                {% if event.start and event.end %}
                    Starting on {{ event.start|date() }} and ending on {{ event.end|date() }}
                {% else %}
                    Date : {{ event.start }}
                {% endif %}
                </small>
            </p>
        </div>
    {% endfor %}
    </div>
{% endblock %}
